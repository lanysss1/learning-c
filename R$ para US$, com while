#include <stdio.h>
int main() {
    int conversao, i = 0;
    float real, dolar;

    printf("Quantas vezes voce quer converter? ");
    scanf("%d", &conversao);

    while ( i<=conversao ) {
        printf("Qual o valor em R$? ");
        scanf("%f", &real);
        dolar = real/4.90;
        printf("O valor convertido em US$ e de:%5.2f \n", dolar);
        i = i + 1;
    }


    return 0;
}
